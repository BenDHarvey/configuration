export TERM='xterm-256color'

editor=vim

alias vim="nvim"
alias ls="ls -lsaG"
alias grep="grep --color=auto"

export PS1='[\u@\h \W$(__git_ps1 " (%s)")]\$ '

[ -f ~/.fzf.bash ] && source ~/.fzf.bash

export NVM_DIR="$HOME/.nvm"
